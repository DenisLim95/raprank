<div class="container">
	<h2>Beat: <%= beat.name %> by <%= beat.producer %></h2>	
	<div style="outline-style: solid">
		<p><%= beat.source %></p>
	</div>

	<div id="parentDiv"></div>

	<form action="/main/<%= beat._id %>/new">
        <button class="btn btn-lg btn-primary" style="position: align-right;" href="/main/<%= beat._id %>/new">Upload your own rendition!</button>            
    </form>

    	<!-- <a href="http://localhost:4000/music?id=oldtune.mp3"> <button class="btn btn-success"> Play </button></a> <hr> -->
